{% extends 'DaniBlogBundle::base.html.twig' %}

{% block title %}DaniBlog - Contact{% endblock%}

{% block body %}
    <div class='col-sm-2'></div>
    {% form_theme form 'bootstrap_3_layout.html.twig' %}
    <form action="{{ path('DaniBlogBundle_contact') }}" method="post" {{ form_enctype(form) }} <div class='col-sm-8'>
        {{ form_errors(form) }}

        {{ form_row(form.name) }}
        {{ form_row(form.email) }}
        {{ form_row(form.subject) }}
        {{ form_row(form.body) }}

        {{ form_rest(form) }}

        <input type="submit" value="Submit" class="btn btn-default"/>
    </form>
{% endblock %}